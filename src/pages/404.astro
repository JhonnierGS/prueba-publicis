---
import SoberanaLayout from '../layouts/LayoutHome.astro';
---

<SoberanaLayout title="error 404">
  <main class="w-full h-screen flex justify-center items-center">
    <section
      class="flex flex-col gap-8 items-center text-center font-black font-ashley text-[1.75rem] leading-[1.75rem]"
    >
      <!-- Content -->
      <h2 class="text-6xl md:text-[64px] mt-4">ERROR 404</h2>
      <h3
        class="text-3xl md:text-[32px] text-balance max-w-[540px] leading-8 mt-3"
      >
        LO SENTIMOS, PERO LA PÁGINA QUE INTENTAS VER NO SE ENCUENTRA DISPONIBLE
      </h3>
      <p class="text-[32px] mt-8 leading-6 font-ashley font-normal">
        Intenta más tarde
      </p>

      <div class="flex justify-center mt-[5px] pb-10 lg:pb-4">
        <a
          id="return-link"
          href="/"
          class=" text-green-500 text-base font-normal uppercase underline cursor-pointer"
        >
          Volver al inicio
        </a>
      </div>
    </section>
  </main>
</SoberanaLayout>
